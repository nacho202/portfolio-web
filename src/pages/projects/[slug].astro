---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} - Portfolio`} description={project.data.description} image={project.data.image}>
  <article class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <!-- Header del proyecto -->
        <div class="mb-16">
          <div class="aspect-video overflow-hidden rounded-xl mb-8 shadow-xl max-w-4xl mx-auto">
            <img 
              src={project.data.image} 
              alt={project.data.title}
              class="w-full h-full object-cover"
            />
          </div>
          
          <div class="flex flex-wrap gap-3 mb-8">
            {project.data.tags.map((tag) => (
              <span class="px-2 py-1 text-xs font-medium rounded-full" style="background-color: var(--card-tag-bg); color: var(--card-tag-text);">
                {tag}
              </span>
            ))}
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold mb-4 leading-tight" style="color: var(--section-title);" data-project-title data-project-slug={project.slug}>
            {project.data.title}
          </h1>
          
          <p class="text-lg md:text-xl mb-6 leading-relaxed" style="color: var(--section-description);" data-project-description data-project-slug={project.slug}>
            {project.data.description}
          </p>
          
          <div class="flex flex-wrap gap-3 mt-6">
            {project.data.github && (
              <a 
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-5 py-2.5 rounded-lg font-semibold text-base transition-all shadow-md hover:shadow-lg github-btn"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span data-i18n="projects.viewCode">Ver Código</span>
              </a>
            )}
            {project.data.live && (
              <a 
                href={project.data.live}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-5 py-2.5 rounded-lg font-semibold text-base transition-all shadow-md hover:shadow-lg demo-btn"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                <span data-i18n="projects.viewDemo">Ver Demo</span>
              </a>
            )}
          </div>
        </div>

        <!-- Contenido del proyecto -->
        <div class="prose prose-lg lg:prose-xl max-w-none dark:prose-invert 
                    prose-headings:font-bold 
                    prose-h2:text-4xl prose-h2:mt-12 prose-h2:mb-6
                    prose-h3:text-3xl prose-h3:mt-10 prose-h3:mb-4
                    prose-code:font-bold prose-code:before:content-none prose-code:after:content-none
                    [&>h2]:text-[var(--prose-h2)] [&>h3]:text-[var(--prose-h3)]"
                    style="--tw-prose-body: var(--timeline-text); --tw-prose-bold: var(--prose-strong); --tw-prose-links: var(--prose-links); --tw-prose-code: var(--prose-code); --tw-prose-code-bg: var(--prose-code-bg);">
          <Content />
        </div>

        <!-- Navegación -->
        <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
          <div class="flex justify-between">
            <a 
              href="/projects" 
              class="inline-flex items-center font-medium transition-colors"
              style="color: var(--nav-link);"
              onmouseover="this.style.opacity='0.7'"
              onmouseout="this.style.opacity='1'"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              <span data-i18n="projects.backToProjects">Volver a Proyectos</span>
            </a>
            <a 
              href="/contact" 
              class="inline-flex items-center font-medium transition-colors"
              style="color: var(--nav-link);"
              onmouseover="this.style.opacity='0.7'"
              onmouseout="this.style.opacity='1'"
            >
              <span data-i18n="projects.workTogether">Trabajar Juntos</span>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<script>
  // Aplicar estilos a botones de GitHub y Demo según el tema
  function applyButtonStyles() {
    const htmlElement = document.documentElement;
    const isDark = htmlElement.classList.contains('dark');
    
    const githubBtn = document.querySelector('.github-btn');
    const demoBtn = document.querySelector('.demo-btn');
    
    if (githubBtn) {
      if (isDark) {
        // Tema oscuro: fondo blanco, texto gris oscuro
        githubBtn.style.backgroundColor = '#ffffff';
        githubBtn.style.color = '#1f2937';
      } else {
        // Tema claro: fondo gris oscuro, texto blanco
        githubBtn.style.backgroundColor = '#1f2937';
        githubBtn.style.color = '#ffffff';
      }
      
      githubBtn.addEventListener('mouseover', () => {
        if (isDark) {
          githubBtn.style.backgroundColor = '#f3f4f6';
        } else {
          githubBtn.style.backgroundColor = '#111827';
        }
        githubBtn.style.transform = 'scale(1.05)';
      });
      
      githubBtn.addEventListener('mouseout', () => {
        if (isDark) {
          githubBtn.style.backgroundColor = '#ffffff';
        } else {
          githubBtn.style.backgroundColor = '#1f2937';
        }
        githubBtn.style.transform = 'scale(1)';
      });
    }
    
    if (demoBtn) {
      if (isDark) {
        // Tema oscuro: azul claro
        demoBtn.style.backgroundColor = '#3b82f6';
        demoBtn.style.color = '#ffffff';
      } else {
        // Tema claro: azul muy oscuro
        demoBtn.style.backgroundColor = '#172554';
        demoBtn.style.color = '#ffffff';
      }
      
      demoBtn.addEventListener('mouseover', () => {
        demoBtn.style.transform = 'scale(1.05)';
      });
      
      demoBtn.addEventListener('mouseout', () => {
        demoBtn.style.transform = 'scale(1)';
      });
    }
  }
  
  // Aplicar estilos al cargar la página
  document.addEventListener('DOMContentLoaded', applyButtonStyles);
  
  // Observar cambios en el tema
  const observer = new MutationObserver(applyButtonStyles);
  observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
</script>
