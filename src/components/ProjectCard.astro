---
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  slug: string;
  featured?: boolean;
}

const { title, description, image, tags, slug, featured = false } = Astro.props;
---

<article class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col h-full" style="background-color: var(--card-bg);">
  <div class="aspect-video overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
  </div>
  
  <div class="p-6 flex flex-col flex-grow">
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.map((tag) => (
        <span class="px-2 py-1 text-xs font-medium rounded-full" style="background-color: var(--card-tag-bg); color: var(--card-tag-text);">
          {tag}
        </span>
      ))}
    </div>
    
    <h3 class="font-bold transition-colors text-xl" style="color: var(--card-title);" data-project-title data-project-slug={slug}>
      {title}
    </h3>
    
    <p class="mt-2 text-sm flex-grow" style="color: var(--card-description);" data-project-description data-project-slug={slug}>
      {description}
    </p>
    
    <div class="mt-4">
      <a 
        href={`/projects/${slug}`}
        class="inline-flex items-center font-medium transition-colors"
        style="color: var(--card-link);"
        onmouseover="this.style.opacity='0.8'"
        onmouseout="this.style.opacity='1'"
        data-i18n="projects.viewProject"
      >
        Ver proyecto
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</article>
